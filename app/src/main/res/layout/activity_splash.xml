<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@color/colorPrimary"
                tools:context=".ui.splash.SplashActivity">

    <ImageView
            android:id="@+id/rudolph_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            android:contentDescription="TODO"
            android:layout_marginTop="32dp"
            android:layout_centerHorizontal="true"/>

    <com.efremov.santa.core.widget.CustomFontTextView
            android:id="@+id/secretSantaLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/secret_santa_label"
            android:textSize="24sp"
            android:textAllCaps="true"
            android:layout_below="@id/rudolph_view"
            android:layout_marginTop="109dp"
            android:layout_centerHorizontal="true"
            style="@style/FontSansSerif"
            app:typeFaceAsset="fonts/FuturaPTHeavy.otf"/>

    <ImageView
            android:id="@+id/line"
            android:layout_width="20dp"
            android:layout_height="2dp"
            android:contentDescription="TODO"
            android:src="@drawable/line"
            android:layout_marginTop="14dp"
            android:layout_below="@id/secretSantaLabel"
            android:layout_centerHorizontal="true" />

    <com.efremov.santa.core.widget.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/secret_santa_description"
            android:textSize="18sp"
            android:lineSpacingExtra="7sp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:layout_below="@id/line"
            android:textColor="@android:color/white"
            app:typeFaceAsset="fonts/FuturaPTBook.otf"/>
</RelativeLayout>